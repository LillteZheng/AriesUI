<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#685E5E"
    android:clipChildren="false"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="colorclick"
        android:text="颜色选择" />

    <com.zhengsr.ariesui.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"/>

    <com.zhengsr.ariesuilib.select.colors.ColorsGradient
        android:layout_width="match_parent"
        app:gra_default_color="@color/colorAccent"
        android:layout_height="100dp"/>

    <include
        android:id="@+id/scan_ly"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="100dp"
        layout="@layout/scan_circle_layout"/>


</LinearLayout>