<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorsGradient">
        <attr name="gra_default_color" format="color|reference|integer"/>
        <attr name="gra_circle_radius" format="integer|dimension"/>
        <attr name="gra_circle_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="MultiColors">
        <attr name="mul_type">
            <enum name="rect" value="1"/>
            <enum name="tri" value="2"/>
        </attr>
        <attr name="mul_type_color" format="color|reference"/>
        <attr name="mul_tri_oritation">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="mul_tri_size" format="dimension|integer"/>

    </declare-styleable>

    <declare-styleable name="ColorsSelectView">
        <attr name="color_gradient_height" format="dimension|integer"/>
        <attr name="color_mulcolor_height" format="dimension|integer"/>
        <attr name="color_circle_size" format="dimension|integer"/>
        <attr name="color_textly_height" format="dimension|integer"/>
        <attr name="color_text_color" format="color|reference"/>
        <attr name="color_text_size" format="dimension|integer"/>
    </declare-styleable>
</resources>