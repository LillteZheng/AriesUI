<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorGradient">
        <attr name="gra_default_color" format="color|reference|integer"/>
        <attr name="gra_circle_radius" format="integer|dimension"/>
        <attr name="gra_circle_color" format="color|reference"/>
        <attr name="gra_bg_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MultiColors">
        <attr name="mul_type">
            <enum name="rect" value="1"/>
            <enum name="tri" value="2"/>
        </attr>
        <attr name="mul_type_color" format="color|reference"/>
        <attr name="mul_tri_oritation">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="mul_tri_size" format="dimension|integer"/>
        <attr name="mul_tri_show_line" format="boolean"/>
        <attr name="mul_bg_radius" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="ColorsSelectView">
        <attr name="color_gradient_height" format="dimension|integer"/>
        <attr name="color_mulcolor_height" format="dimension|integer"/>
        <attr name="color_circle_size" format="dimension|integer"/>
        <attr name="color_textly_height" format="dimension|integer"/>
        <attr name="color_text_color" format="color|reference"/>
        <attr name="color_text_size" format="dimension|integer"/>
    </declare-styleable>

    <declare-styleable name="ScanView">
        <attr name="scan_sweep_color" format="color|reference"/>
        <attr name="scan_circle_num" format="integer"/>
        <attr name="scan_circle_color" format="color|reference"/>
        <attr name="scan_sweep_time" format="integer"/>
        <attr name="scan_random_num" format="integer"/>
        <attr name="scan_random_color" format="color|reference"/>
        <attr name="scan_show_random" format="boolean"/>
        <attr name="scan_show_dash" format="boolean"/>
        <attr name="scan_anim_auto" format="boolean"/>
        <attr name="scan_dash_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BezierPointView">
        <attr name="bez_default_circleSize" format="integer|dimension"/>
        <attr name="bez_draw_circlecSize" format="integer|dimension"/>
        <attr name="bez_max_length" format="integer|dimension"/>
        <attr name="bez_draw_color" format="color|reference"/>
        <attr name="bez_recovery_bound" format="dimension|integer"/>
        <attr name="bez_isCanMove" format="boolean"/>
        <attr name="bez_animator" format="reference"/>
    </declare-styleable>

    <!--当cus_img_normal有数据时，cus_img 无效-->
    <declare-styleable name="CusBottomItemView">
        <attr name="cus_img_normal" format="reference"/>
        <attr name="cus_img_select" format="reference"/>
        <attr name="cus_normal_text_color" format="reference|color"/>
        <attr name="cus_selected_text_coclor" format="color|reference"/>
        <attr name="cus_text" format="reference|string"/>
        <attr name="cus_text_size" format="dimension"/>
        <attr name="cus_image_size" format="dimension"/>
        <attr name="cus_image_margin_top" format="dimension"/>
        <attr name="cus_text_margin_top" format="dimension"/>
        <attr name="cus_no_background" format="boolean"/>
        <attr name="cus_isChoose" format="boolean"/>
        <attr name="cus_not_change_img" format="boolean"/>
        <attr name="cus_change_both" format="boolean"/>
    </declare-styleable>


    <!--弧形图片-->
    <declare-styleable name="ArcImageView">
        <attr name="arc_height" format="dimension"/> <!--弧度的高度-->
        <attr name="arc_blur" format="integer"/>
        <attr name="arc_use_color" format="color|reference"/>
        <attr name="arc_scaleX" format="dimension"/>
        <attr name="arc_scaleY" format="dimension"/>
        <attr name="arc_scaleFactor" format="float"/>
        <attr name="arc_auto_fix" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="cv_boardColor" format="color|reference"/>
        <attr name="cv_borderWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="iv_edTextColor" format="color|reference"/>
        <attr name="iv_edHintColor" format="color|reference"/>
        <attr name="iv_edTextSize" format="dimension"/>
        <attr name="iv_bottomColor" format="color|reference"/>
        <attr name="iv_bottomSize" format="dimension"/>
    </declare-styleable>
</resources>